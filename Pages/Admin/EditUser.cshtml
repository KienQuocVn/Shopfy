@page
@model Shofy.Pages.Admin.EditUserModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit User";
}

<!-- Bootstrap Icons + Animate.css -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<div class="wrapper d-flex">
    <!-- Sidebar -->
    <nav id="sidebar" class="bg-dark text-white shadow-lg">
        <div class="sidebar-header text-center py-4">
            <a href="/Index" class="text-light">
                <h3 class="mb-0">SHOPFY</h3>
            </a>
        </div>
        <div class="navigation-section">
            <p class="text-muted pt-4 pb-2 fw-bold ps-4">NAVIGATION</p>
            <ul class="list-unstyled">
                <li><a href="/Admin/Index" class="fw-bold"><i class="bi bi-house me-2"></i> Analytics</a></li>
                <li class="active"><a href="/Admin/User"><i class="bi bi-person-fill me-2"></i> Users</a></li>
                <li><a href="/Admin/Products"><i class="bi bi-grid-fill me-2"></i> Products</a></li>
                <li><a href="/Admin/Order"><i class="bi bi-shop me-2"></i> Orders</a></li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <div id="content" class="flex-fill">
        <!-- Top Navigation -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
            <div class="container-fluid">
                <button type="button" id="sidebarCollapse" class="btn">
                    <i class="bi bi-list"></i>
                </button>
                <div class="d-flex align-items-center ms-auto">
                    <div class="profile-section ms-3">
                        <img src="@Model.Avatar" class="rounded-circle border border-2 border-light shadow-sm" alt="Profile" style="width: 40px; height: 40px;">
                        <div class="d-flex flex-column ms-2">
                            <span class="fs-6 text-dark">@Model.Username</span>
                        </div>
                    </div>
                </div>
            </div>
        </nav>

        <div class="container-fluid py-5">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <!-- Breadcrumb -->
                    <nav aria-label="breadcrumb" class="mb-4">
                        <ol class="breadcrumb bg-light shadow-sm rounded px-3 py-2">
                            <li class="breadcrumb-item"><a asp-page="/Index" class="text-decoration-none">üè† Home</a></li>
                            <li class="breadcrumb-item"><a asp-page="User" class="text-decoration-none">üë§ Users</a></li>
                            <li class="breadcrumb-item active" aria-current="page">‚úèÔ∏è Edit User</li>
                        </ol>
                    </nav>

                    <!-- Edit Form -->
                    <div class="card shadow-lg border-0 rounded-3">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="bi bi-gear me-2"></i> Edit User Information</h5>
                        </div>
                        <div class="card-body bg-light">
                            <form method="post">
                                <input type="hidden" asp-for="UserId" />
                                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                                <div class="row g-4">
                                    <!-- Username -->
                                    <div class="col-md-6">
                                        <label asp-for="Username" class="form-label"><i class="bi bi-person-circle me-1"></i>Username</label>
                                        <input asp-for="Username" class="form-control form-control-lg shadow-sm" />
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>

                                    <!-- Email -->
                                    <div class="col-md-6">
                                        <label asp-for="Email" class="form-label"><i class="bi bi-envelope me-1"></i>Email</label>
                                        <input asp-for="Email" class="form-control form-control-lg shadow-sm" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <!-- Role -->
                                    <div class="col-md-6">
                                        <label asp-for="Role" class="form-label"><i class="bi bi-person-badge me-1"></i>Role</label>
                                        <select asp-for="Role" class="form-select form-select-lg shadow-sm">
                                            <option value="">-- Select Role --</option>
                                            <option value="Admin">Admin</option>
                                            <option value="User">User</option>
                                        </select>
                                        <span asp-validation-for="Role" class="text-danger"></span>
                                    </div>

                                    <!-- Full Name -->
                                    <div class="col-md-6">
                                        <label asp-for="FullName" class="form-label"><i class="bi bi-card-text me-1"></i>Full Name</label>
                                        <input asp-for="FullName" class="form-control form-control-lg shadow-sm" />
                                        <span asp-validation-for="FullName" class="text-danger"></span>
                                    </div>

                                    <!-- Phone -->
                                    <div class="col-md-6">
                                        <label asp-for="PhoneNumber" class="form-label"><i class="bi bi-telephone me-1"></i>Phone</label>
                                        <input asp-for="PhoneNumber" class="form-control form-control-lg shadow-sm" />
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>

                                    <!-- Address -->
                                    <div class="col-md-6">
                                        <label asp-for="Address" class="form-label"><i class="bi bi-geo-alt me-1"></i>Address</label>
                                        <input asp-for="Address" class="form-control form-control-lg shadow-sm" />
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-between mt-4">
                                    <button type="submit" class="btn btn-success btn-lg px-4 shadow-sm"><i class="bi bi-save me-1"></i>Save</button>
                                    <a asp-page="User" class="btn btn-outline-danger btn-lg px-4 shadow-sm"><i class="bi bi-arrow-left me-1"></i>Back</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }

        <style>
            .avatar-img {
                width: 110px;
                height: 110px;
                object-fit: cover;
                border: 4px solid white;
                transition: transform 0.3s ease;
            }

            .avatar-img:hover {
                transform: scale(1.05);
            }

            .avatar-overlay {
                position: absolute;
                bottom: 0;
                right: 0;
                background: rgba(0, 0, 0, 0.6);
                border-radius: 50%;
                padding: 6px;
                color: #fff;
                opacity: 0;
                transition: opacity 0.3s ease;
            }

            .avatar-container:hover .avatar-overlay {
                opacity: 1;
            }

            .text-shadow {
                text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.4);
            }

            .profile-section img {
                transition: transform 0.3s ease-in-out;
            }

            .profile-section:hover img {
                transform: scale(1.1);
            }
        </style>
    </div>
</div>
