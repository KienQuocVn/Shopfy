@page
@model Shofy.Pages.Admin.ConfirmHideModel
@{
    ViewData["Title"] = "Xác nhận ẩn người dùng";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-sm border-warning" style="max-width: 600px; width: 100%;">
        <div class="card-header bg-warning text-white text-center">
            <h4 class="mb-0"><i class="bi bi-eye-slash-fill"></i> Xác nhận ẩn người dùng</h4>
        </div>
        <div class="card-body">
            <form method="post">
                <input type="hidden" asp-for="UserId" />
                
                <div class="mb-3">
                    <label asp-for="Reason" class="form-label fw-semibold">Lý do ẩn người dùng:</label>
                    <textarea asp-for="Reason" class="form-control" rows="4" placeholder="Nhập lý do..."></textarea>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-check-circle-fill"></i> Xác nhận ẩn
                    </button>
                    <a asp-page="User" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
