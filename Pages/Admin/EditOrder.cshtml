@page
@model Shofy.Pages.Admin.EditOrderModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit Order";
}

<div class="container-fluid py-5">
    <div class="card shadow-lg border-0">

        <div class="row d-flex justify-content-between align-items-center mb-4">
            <div class="col-auto">
                <h2 class="mb-0">Chỉnh sửa Đơn hàng</h2>
            </div>
            <div class="col-auto">
                <a href="/Admin/Order" class="btn btn-primary">Quay lại</a>
            </div>
        </div>
        <div class="card-body p-4">
            <form method="post">
                <div class="row mb-4">
                    <label for="orderId" class="col-sm-2 col-form-label fw-bold">Order ID</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control form-control-lg" id="orderId"
                            value="@Model.Order.OrderID" disabled />
                    </div>
                </div>

                <div class="row mb-4">
                    <label for="user" class="col-sm-2 col-form-label fw-bold">User</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control form-control-lg" id="user"
                            value="@Model.Order.User?.FullName" disabled />
                    </div>
                </div>

                <div class="row mb-4">
                    <label for="totalPrice" class="col-sm-2 col-form-label fw-bold">Total Price</label>
                    <div class="col-sm-10">
                        <div class="input-group">
                            <input type="number" class="form-control form-control-lg" id="totalPrice" name="TotalPrice"
                                value="@Model.Order.TotalPrice" />
                        </div>
                    </div>
                </div>

                <div class="row mb-4">
                    <label for="paymentMethod" class="col-sm-2 col-form-label fw-bold">Payment Method</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control form-control-lg" id="paymentMethod" name="PaymentMethod"
                            value="@Model.Order.PaymentMethod" />
                    </div>
                </div>

                <div class="row mb-4">
                    <label for="status" class="col-sm-2 col-form-label fw-bold">Status</label>
                    <div class="col-sm-10">
                        <select class="form-select form-select-lg" id="status" name="Status">
                            <option value="Processing"
                                selected="@(Model.Order.Status == "Processing" ? "selected" : "")">Processing</option>
                            <option value="Pending" selected="@(Model.Order.Status == "Pending" ? "selected" : "")">
                                Pending</option>
                            <option value="Completed" selected="@(Model.Order.Status == "Completed" ? "selected" : "")">
                                Completed</option>
                            <option value="Canceled" selected="@(Model.Order.Status == "Canceled" ? "selected" : "")">
                                Canceled</option>
                        </select>
                    </div>
                </div>

                <div class="row mt-5">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-primary btn-lg px-5">
                            <i class="bi bi-save me-2"></i>Lưu thay đổi
                        </button>
                        <a href="/Admin/Order" class="btn btn-outline-secondary btn-lg px-5 ms-2">Hủy</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
        transition: all 0.3s ease;
    }

    .card-header {
        border-radius: 10px 10px 0 0;
    }

    .form-control,
    .form-select {
        border-radius: 8px;
        padding: 12px;
        font-size: 1.1rem;
    }

    .btn-primary {
        border: none;
        transition: background-color 0.3s ease;
    }



    .btn-outline-secondary {
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .input-group-text {
        background-color: #f8f9fa;
        border-radius: 8px 0 0 8px;
    }

    label {
        font-size: 1.1rem;
        color: #333;
    }
</style>