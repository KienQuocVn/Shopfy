@page "{id:int}"
@model Shofy.Pages.Admin.EditOrderModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit Order";
}

<!-- Bootstrap Icons + Animate.css -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<style>
    body {
        background: #f4f6fa;
    }

    .edit-container {
        background: linear-gradient(to bottom right, #fdfefe, #f0f4f8);
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 6px 24px rgba(0, 0, 0, 0.08);
        border: 1px solid #dee2e6;
        transition: all 0.3s ease-in-out;
    }

    .edit-container:hover {
        transform: translateY(-2px);
    }

    h2.title {
        font-weight: 700;
        color: #4a6fa5;
    }

    .form-label {
        font-weight: 600;
        color: #495057;
    }

    .form-control,
    .form-select {
        border-radius: 12px;
        padding: 10px 14px;
        border: 1px solid #ced4da;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    .form-control:focus,
    .form-select:focus {
        border-color: #6c63ff;
        box-shadow: 0 0 0 0.15rem rgba(108, 99, 255, 0.25);
    }

    .btn-save {
        background-color: #6c63ff;
        border: none;
        color: white;
        font-weight: 600;
        transition: background-color 0.3s ease;
    }

    .btn-save:hover {
        background-color: #5a54d1;
    }

    .btn-cancel {
        background-color: #e0e0e0;
        border: none;
        color: #333;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-cancel:hover {
        background-color: #cacaca;
    }

    .image-preview {
        background: #fff;
        border: 1px solid #ddd;
        padding: 10px;
        border-radius: 12px;
        display: inline-block;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
    }

    .form-section i {
        color: #6c63ff;
        margin-right: 6px;
    }
</style>
<div class="wrapper">
    <!-- Sidebar -->
    <nav id="sidebar" class="bg-dark text-white">
        <div class="sidebar-header">
            <a href="/Index" class="text-light">
                <h3 class="mb-0">SHOPFY</h3>
            </a>
        </div>
        <div class="navigation-section">
            <p class="text-muted pt-4 pb-2 fw-bold" style="margin-left: 10px;">NAVIGATION</p>
            <ul class="list-unstyled">
                <li><a href="/Admin/Index" class="fw-bold"><i class="bi bi-house me-2"></i> Analytics</a></li>
                <li class="active"><a href="/Admin/User"><i class="bi bi-cart me-2"></i> Users</a></li>
                <li><a href="/Admin/Products"><i class="bi bi-grid-fill me-2"></i> Products</a></li>
                <li><a href="/Admin/Order"><i class="bi bi-shop me-2"></i> Orders</a></li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <div id="content">
        <!-- Top Navigation -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white">
            <div class="container-fluid">
                <button type="button" id="sidebarCollapse" class="btn">
                    <i class="bi bi-list"></i>
                </button>
                <div class="d-flex align-items-center">
                    <div class="profile-section ms-3">
                        <!-- Display user avatar and username -->
                        <img src="@Model.Avatar" class="rounded-circle" alt="Profile"
                            style="width: 40px; height: 40px;">
                        <div class="d-flex flex-column">
                            <span class="ms-2">@Model.Username</span>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
        <div class="container-fluid mt-5">
            <div class="text-center mb-4">
                <h2 class="title animate__animated animate__fadeInDown">
                    <i class="bi bi-pencil-square me-2"></i>Edit Order
                </h2>
                <p class="text-muted">Gently update your order details ✨</p>
            </div>

            <div class="edit-container animate__animated animate__fadeInUp">
                <form method="post">
                    <input type="hidden" asp-for="Order.OrderID" />

                    <div class="form-section mb-3">
                        <label asp-for="Order.User.FullName" class="form-label"><i
                                class="bi bi-person-circle"></i>User</label>
                        <input asp-for="Order.User.FullName" class="form-control" disabled />
                    </div>

                    <div class="form-section mb-3">
                        <label asp-for="Order.TotalPrice" class="form-label"><i class="bi bi-cash-stack"></i>Total
                            Price</label>
                        <input asp-for="Order.TotalPrice" class="form-control" />
                    </div>

                    <div class="form-section mb-3">
                        <label asp-for="Order.PaymentMethod" class="form-label"><i class="bi bi-credit-card"></i>Payment
                            Method</label>
                        <input asp-for="Order.PaymentMethod" class="form-control" />
                    </div>

                    <div class="form-section mb-3">
                        <label asp-for="Order.Status" class="form-label"><i class="bi bi-toggle-on"></i>Status</label>
                        <select asp-for="Order.Status" class="form-select">
                            <option value="Processing">✅ Processing</option>
                            <option value="Pending">❌ Pending</option>
                            <option value="Completed">✔️ Completed</option>
                            <option value="Canceled">❌ Canceled</option>
                        </select>
                    </div>

                    <div class="d-flex justify-content-end gap-3">
                        <button type="submit" class="btn btn-save px-4">
                            <i class="bi bi-check-circle me-1"></i>Save Changes
                        </button>
                        <a href="/Admin/Order" class="btn btn-cancel px-4">
                            <i class="bi bi-arrow-left-circle me-1"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
