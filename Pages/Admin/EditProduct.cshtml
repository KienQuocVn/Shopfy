@page "{id:int}"
@model Shofy.Pages.Admin.EditProductModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit Product";
}
<!-- Bootstrap Icons + Animate.css -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<style>
    body {
        background: #f4f6fa;
    }

    .edit-container {
        background: linear-gradient(to bottom right, #fdfefe, #f0f4f8);
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 6px 24px rgba(0, 0, 0, 0.08);
        border: 1px solid #dee2e6;
        transition: all 0.3s ease-in-out;
    }

    .edit-container:hover {
        transform: translateY(-2px);
    }

    h2.title {
        font-weight: 700;
        color: #4a6fa5;
    }

    .form-label {
        font-weight: 600;
        color: #495057;
    }

    .form-control,
    .form-select {
        border-radius: 12px;
        padding: 10px 14px;
        border: 1px solid #ced4da;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    .form-control:focus,
    .form-select:focus {
        border-color: #6c63ff;
        box-shadow: 0 0 0 0.15rem rgba(108, 99, 255, 0.25);
    }

    .btn-save {
        background-color: #6c63ff;
        border: none;
        color: white;
        font-weight: 600;
        transition: background-color 0.3s ease;
    }

    .btn-save:hover {
        background-color: #5a54d1;
    }

    .btn-cancel {
        background-color: #e0e0e0;
        border: none;
        color: #333;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-cancel:hover {
        background-color: #cacaca;
    }

    .image-preview {
        background: #fff;
        border: 1px solid #ddd;
        padding: 10px;
        border-radius: 12px;
        display: inline-block;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
    }

    .form-section i {
        color: #6c63ff;
        margin-right: 6px;
    }
</style>
<div class="wrapper">
    <!-- Sidebar -->
    <nav id="sidebar" class="bg-dark text-white">
        <div class="sidebar-header">
            <a href="/Index" class="text-light">
                <h3 class="mb-0">SHOPFY</h3>
            </a>
        </div>
        <div class="navigation-section">
            <p class="text-muted pt-4 pb-2 fw-bold" style="margin-left: 10px;">NAVIGATION</p>
            <ul class="list-unstyled">
                <li><a href="/Admin/Index" class="fw-bold"><i class="bi bi-house me-2"></i> Analytics</a></li>
                <li class="active"><a href="/Admin/User"><i class="bi bi-cart me-2"></i> Users</a></li>
                <li><a href="/Admin/Products"><i class="bi bi-grid-fill me-2"></i> Products</a></li>
                <li><a href="/Admin/Order"><i class="bi bi-shop me-2"></i> Orders</a></li>
                @* <li><a href="#"><i class="bi bi-wallet me-2"></i> E-Wallet</a></li> *@
            </ul>
        </div>

        @* <div class="apps-section">
            <p class="text-muted ps-3 pt-4 pb-2 mb-0 fw-bold" style="margin-left: 10px;">APPS</p>
            <ul class="list-unstyled">
                <li><a href="/Admin/Chat"><i class="bi bi-chat-left-dots me-2"></i> Chat</a></li>
                <li><a href="#"><i class="bi bi-calendar me-2"></i> Calendar</a></li>
                <li><a href="#"><i class="bi bi-envelope me-2"></i> Email</a></li>
            </ul>
        </div> *@
    </nav>

    <!-- Main Content -->
    <div id="content">
        <!-- Top Navigation -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white">
            <div class="container-fluid">
                <button type="button" id="sidebarCollapse" class="btn">
                    <i class="bi bi-list"></i>
                </button>
                @* <div class="search-box d-flex">
                    <input type="text" id="searchInput" class="form-control me-2" placeholder="Search...">
                    <button class="btn btn-primary" type="button" onclick="handleSearch()">Search</button>
                </div> *@
                <div class="d-flex align-items-center">
                    @* <div class="icons-group">
                        <button class="btn"><i class="bi bi-bell"></i></button>
                        <button class="btn"><i class="bi bi-grid-fill"></i></button>
                        <button class="btn"><i class="bi bi-gear"></i></button>
                        <button class="btn"><i class="bi bi-moon"></i></button>
                        <button class="btn"><i class="bi bi-fullscreen"></i></button>
                    </div>  *@
                    <div class="profile-section ms-3">
                        <img src="@Model.Avatar" class="rounded-circle" alt="Profile"
                            style="width: 40px; height: 40px;">
                        <div class="d-flex flex-column">
                            <span class="ms-2">@Model.Username</span>
                        </div>
                    </div>
                </div>
            </div>
        </nav>

        <div class="container-fluid mt-5">
            <div class="text-center mb-4">
                <h2 class="title animate__animated animate__fadeInDown">
                    <i class="bi bi-pencil-square me-2"></i>Edit Product
                </h2>
                <p class="text-muted">Gently update your product details ✨</p>
            </div>

            <div class="edit-container animate__animated animate__fadeInUp">
                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Product.ProductID" />

                    <div class="form-section mb-3">
                        <label asp-for="Product.Name" class="form-label"><i class="bi bi-box"></i>Product Name</label>
                        <input asp-for="Product.Name" class="form-control" placeholder="e.g. iPhone 15 Pro" />
                    </div>

                    <div class="form-section mb-3">
                        <label asp-for="Product.Price" class="form-label"><i class="bi bi-cash-stack"></i>Price</label>
                        <input asp-for="Product.Price" class="form-control" placeholder="e.g. 999.99" />
                    </div>

                    <div class="form-section mb-3">
                        <label asp-for="Product.StockQuantity" class="form-label"><i class="bi bi-stack"></i>Stock Quantity</label>
                        <input asp-for="Product.StockQuantity" class="form-control" />
                    </div>

                    <div class="form-section mb-3">
                        <label asp-for="Product.Status" class="form-label"><i class="bi bi-toggle-on"></i>Status</label>
                        <select asp-for="Product.Status" class="form-select">
                            <option value="Active">✅ Active</option>
                            <option value="InActive">❌ InActive</option>
                        </select>
                    </div>

                    <div class="form-section mb-3">
                        <label asp-for="Product.Description" class="form-label"><i class="bi bi-textarea-t"></i>Description</label>
                        <textarea asp-for="Product.Description" class="form-control" rows="4" placeholder="Write product description..."></textarea>
                    </div>

                    <div class="form-section mb-3">
                        <label class="form-label"><i class="bi bi-image"></i>Current Image</label><br />
                        @if (!string.IsNullOrEmpty(Model.Product.ImagePath))
                        {
                            <div class="image-preview mb-2">
                                <img src="~/images/@Model.Product.ImagePath" width="150" class="rounded" />
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No image uploaded.</p>
                        }
                    </div>

                    <div class="form-section mb-4">
                        <label class="form-label"><i class="bi bi-upload"></i>Upload New Image</label>
                        <input type="file" name="ImageFile" class="form-control" accept="image/*" />
                    </div>

                    <div class="d-flex justify-content-end gap-3">
                        <button type="submit" class="btn btn-save px-4">
                            <i class="bi bi-check-circle me-1"></i>Save
                        </button>
                        <a href="/Admin/Products" class="btn btn-cancel px-4">
                            <i class="bi bi-arrow-left-circle me-1"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
