@page "{UserId:int}"
@model Shofy.Pages.Admin.ReviewUserModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Review User";
}

<div class="wrapper">
    <!-- Sidebar -->
    <nav id="sidebar" class="bg-dark text-white">
        <div class="sidebar-header">
            <a href="/Index" class="text-light">
                <h3 class="mb-0">SHOPFY</h3>
            </a>
        </div>
        <div class="navigation-section">
            <p class="text-muted pt-4 pb-2 fw-bold" style="margin-left: 10px;">NAVIGATION</p>
            <ul class="list-unstyled">
                <li><a href="/Admin/Index" class="fw-bold"><i class="bi bi-house me-2"></i> Analytics</a></li>
                <li class="active"><a href="/Admin/User"><i class="bi bi-cart me-2"></i> Users</a></li>
                <li><a href="/Admin/Products"><i class="bi bi-grid-fill me-2"></i> Products</a></li>
                <li><a href="/Admin/Order"><i class="bi bi-shop me-2"></i> Orders</a></li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <div id="content">
        <!-- Top Navigation -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white">
            <div class="container-fluid">
                <button type="button" id="sidebarCollapse" class="btn">
                    <i class="bi bi-list"></i>
                </button>
                <div class="d-flex align-items-center">
                    <div class="profile-section ms-3">
                        <!-- Display user avatar and username -->
                        <img src="@Model.Avatar" class="rounded-circle" alt="Profile" style="width: 40px; height: 40px;">
                        <div class="d-flex flex-column">
                            <span class="ms-2">@Model.Username</span>
                        </div>
                    </div>
                </div>
            </div>
        </nav>

        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <!-- Header with Title and Back Button -->
                    <div class="row d-flex justify-content-between align-items-center mb-4">
                        <div class="col-auto">
                            <h2 class="mb-0 text-primary">Thông tin chi tiết khách hàng</h2>
                        </div>
                        <div class="col-auto">
                            <a asp-page="User" class="btn btn-lg btn-gradient-primary text-white transition-transform hover:scale-105">Quay lại</a>
                        </div>
                    </div>

                    <!-- User Profile Section -->
                    <div class="row gutters-sm">
                        <div class="col-md-4 mb-3">
                            <div class="card border-0 shadow-lg rounded-3 bg-light">
                                <div class="card-body text-center">
                                    <div class="avatar-container position-relative mb-3">
                                        <img src="@(Model.User?.Avatar ?? "~/images/noavt.jpg")" alt="Avatar" class="rounded-circle avatar-img shadow-sm">
                                    </div>
                                    <h4 class="fw-bold text-dark">@Model.User.Username</h4>
                                    <p class="text-success mb-1">@Model.User.Role</p>
                                    <p class="text-muted font-size-sm">@Model.User.Address</p>
                                </div>
                            </div>
                        </div>

                        <!-- User Details Section -->
                        <div class="col-md-8">
                            <div class="card border-0 shadow-lg rounded-3 mb-4">
                                <div class="card-body">
                                    <!-- Full Name -->
                                    <div class="row mb-3">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0 text-info">Full Name</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            @Model.User.FullName
                                        </div>
                                    </div>
                                    <hr>
                                    
                                    <!-- Email -->
                                    <div class="row mb-3">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0 text-info">Email</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            @Model.User.Email
                                        </div>
                                    </div>
                                    <hr>

                                    <!-- Phone Number -->
                                    <div class="row mb-3">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0 text-info">Phone Number</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            @Model.User.PhoneNumber
                                        </div>
                                    </div>
                                    <hr>

                                    <!-- Address -->
                                    <div class="row mb-3">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0 text-info">Address</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            @Model.User.Address
                                        </div>
                                    </div>
                                    <hr>

                                    <!-- Created Date -->
                                    <div class="row mb-3">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0 text-info">Created Date</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            @Model.User.CreatedDate
                                        </div>
                                    </div>
                                    <hr>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* Custom Styles */
    .avatar-container {
        position: relative;
        display: inline-block;
    }

    .avatar-img {
        width: 150px;
        height: 150px;
        object-fit: cover;
        transition: transform 0.3s ease-in-out;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

    .avatar-img:hover {
        transform: scale(1.2);
    }

    .card {
        border-radius: 10px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        background: #f5f5f5;
    }

    .card-body {
        padding: 30px;
    }

    /* Button Hover */
    .transition-transform {
        transition: transform 0.3s ease;
    }

    .transition-transform:hover {
        transform: scale(1.1);
    }

    .btn-gradient-primary {
        background: linear-gradient(135deg, #6c63ff, #3a8dff);
        border: none;
        color: #fff;
        font-weight: bold;
    }

    .btn-gradient-primary:hover {
        background: linear-gradient(135deg, #3a8dff, #6c63ff);
    }

    .text-info {
        color: #17a2b8;
    }

    .text-muted {
        color: #6c757d;
    }

    .text-success {
        color: #28a745;
    }

    .text-dark {
        color: #343a40;
    }
</style>
