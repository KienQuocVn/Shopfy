@page "{UserId:int}"
@model Shofy.Pages.Admin.ReviewUserModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Xem chi tiết người dùng";
}
<style>
    /* Custom Styles */
    .avatar-container {
        position: relative;
        display: inline-block;
    }

    .avatar-img {
        width: 150px;
        height: 150px;
        object-fit: cover;
        transition: transform 0.3s ease-in-out;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

    .avatar-img:hover {
        transform: scale(1.2);
    }

    .card {
        border-radius: 10px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        background: #f5f5f5;
    }

    .card-body {
        padding: 30px;
    }

    /* Button Hover */
    .transition-transform {
        transition: transform 0.3s ease;
    }

    .transition-transform:hover {
        transform: scale(1.1);
    }

    .btn-gradient-primary {
        background: linear-gradient(135deg, #6c63ff, #3a8dff);
        border: none;
        color: #fff;
        font-weight: bold;
    }

    .btn-gradient-primary:hover {
        background: linear-gradient(135deg, #3a8dff, #6c63ff);
    }

    .text-info {
        color: #17a2b8;
    }

    .text-muted {
        color: #6c757d;
    }

    .text-success {
        color: #28a745;
    }

    .text-dark {
        color: #343a40;
    }
</style>

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Tiêu đề và Nút Quay Lại -->
            <div class="row d-flex justify-content-between align-items-center mb-4">
                <div class="col-auto">
                    <h2 class="mb-0 text-primary">Thông Tin Chi Tiết Khách Hàng</h2>
                </div>
                <div class="col-auto">
                    <a asp-page="User"
                        class="btn btn-lg btn-gradient-primary text-white transition-transform hover:scale-105">Quay
                        Lại</a>
                </div>
            </div>

            <!-- Phần Hồ Sơ Người Dùng -->
            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card border-0 shadow-lg rounded-3 bg-light">
                        <div class="card-body text-center">
                            <div class="avatar-container position-relative mb-3">
                                <img src="@(Model.User?.Avatar ?? "~/images/noavt.jpg")" alt="Ảnh đại diện"
                                    class="rounded-circle avatar-img shadow-sm">
                            </div>
                            <h4 class="fw-bold text-dark">@Model.User.Username</h4>
                            <p class="text-success mb-1">
                                @(Model.User.Role == "Admin" ? "Quản Trị" :
                                                                Model.User.Role == "User" ? "Người Dùng" : Model.User.Role)
                            </p>
                            <p class="text-muted font-size-sm">@Model.User.Address</p>
                        </div>
                    </div>
                </div>

                <!-- Phần Chi Tiết Người Dùng -->
                <div class="col-md-8">
                    <div class="card border-0 shadow-lg rounded-3 mb-4">
                        <div class="card-body">
                            <!-- Họ Tên -->
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0 text-info">Họ Tên</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.User.FullName
                                </div>
                            </div>
                            <hr>

                            <!-- Email -->
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0 text-info">Email</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.User.Email
                                </div>
                            </div>
                            <hr>

                            <!-- Số Điện Thoại -->
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0 text-info">Số Điện Thoại</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.User.PhoneNumber
                                </div>
                            </div>
                            <hr>

                            <!-- Địa Chỉ -->
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0 text-info">Địa Chỉ</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.User.Address
                                </div>
                            </div>
                            <hr>

                            <!-- Ngày Tạo -->
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <h6 class="mb-0 text-info">Ngày Tạo</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.User.CreatedDate
                                </div>
                            </div>
                            <hr>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
