@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<style>
:root {
  --primary-color: #6658dd;
  --error-color: #ff5b5b;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
    "Helvetica Neue", Arial, sans-serif;
  background: linear-gradient(135deg, #f5f6f8 0%, #eef0f4 100%);
  min-height: 100vh;
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.error-page {
  width: 100%;
  padding: 2rem;
  text-align: center;
}

.error-box {
  background: white;
  padding: 3rem;
  border-radius: 1rem;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
  max-width: 600px;
  margin: 0 auto;
  animation: slideUp 0.5s ease-out;
}

.error-illustration {
  font-size: 5rem;
  color: var(--error-color);
  margin-bottom: 1.5rem;
  animation: pulse 2s infinite;
}

h1 {
  font-size: 5rem;
  font-weight: 700;
  color: var(--error-color);
  margin: 0;
  line-height: 1;
  animation: fadeIn 0.5s ease-out 0.2s both;
}

h2 {
  font-size: 2rem;
  color: #333;
  margin: 1rem 0;
  animation: fadeIn 0.5s ease-out 0.4s both;
}

.error-description {
  font-size: 1.1rem;
  color: #666;
  margin-bottom: 2rem;
  animation: fadeIn 0.5s ease-out 0.6s both;
}

.error-actions {
  animation: fadeIn 0.5s ease-out 0.8s both;
}

.btn-primary {
  background-color: var(--primary-color);
  border-color: var(--primary-color);
  padding: 0.75rem 1.5rem;
  transition: all 0.3s ease;
}

.btn-primary:hover {
  background-color: #5546d6;
  border-color: #5546d6;
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(102, 88, 221, 0.3);
}

.btn-outline-primary {
  color: var(--primary-color);
  border-color: var(--primary-color);
  padding: 0.75rem 1.5rem;
  transition: all 0.3s ease;
}

.btn-outline-primary:hover {
  background-color: var(--primary-color);
  border-color: var(--primary-color);
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(102, 88, 221, 0.3);
}

.error-contact {
  animation: fadeIn 0.5s ease-out 1s both;
}

.error-contact a {
  color: var(--primary-color);
  text-decoration: none;
  font-weight: 500;
}

.error-contact a:hover {
  text-decoration: underline;
}

</style>

<div class="error-page">
    <div class="error-box">
        <div class="error-illustration">
            <i class="fas fa-exclamation-circle"></i>
        </div>
        <h1>Error</h1>
        <h2>An Error Occurred</h2>
        <p class="error-description">An error occurred while processing your request.</p>
        
        @if (Model.ShowRequestId)
        {
            <p class="error-description">
                <strong>Request ID:</strong> <code>@Model.RequestId</code>
            </p>
        }

        <div class="error-actions">
            <a href="/" class="btn btn-primary btn-lg">
                <i class="fas fa-home me-2"></i>
                Back to Home
            </a>
        </div>
        <div class="error-contact mt-4">
            <p class="text-muted">
                If you believe this is a mistake, please contact the administrator
                <a href="mailto:support@example.com">support@shofy.com</a>
            </p>
        </div>
    </div>
</div>

<!-- Font Awesome for Icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">