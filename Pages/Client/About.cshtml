@page
@model Shofy.Pages.Client.Pages_Client_AboutModel
@{
	ViewData["Title"] = "Về chúng tôi";
}

<!-- Title page -->
<section class="bg-img1 txt-center p-lr-15 p-tb-92" style="background-image: url('../images/bg-01.jpg');">
	<h2 class="ltext-105 cl0 txt-center">
		Về chúng tôi
	</h2>
</section>

<!-- Content page -->
<section class="bg0 p-t-75 p-b-120">
	<div class="container">
		<div class="row p-b-148">
			<div class="col-md-7 col-lg-8">
				<div class="p-t-7 p-r-85 p-r-15-lg p-r-0-md">
					<h3 class="mtext-111 cl2 p-b-16">
						Câu chuyện của chúng tôi
					</h3>

					<p class="stext-113 cl6 p-b-26">
						Chúng tôi bắt đầu hành trình với niềm đam mê mang lại những sản phẩm chất lượng cao và dịch vụ
						tuyệt vời cho khách hàng. Từ những ngày đầu thành lập, chúng tôi đã không ngừng nỗ lực để xây
						dựng một thương hiệu đáng tin cậy, lấy khách hàng làm trung tâm. Mỗi sản phẩm chúng tôi mang đến
						đều được lựa chọn kỹ lưỡng, kết hợp giữa phong cách hiện đại và sự thoải mái, nhằm đáp ứng nhu
						cầu đa dạng của khách hàng trên toàn thế giới. Chúng tôi tin rằng sự hài lòng của khách hàng là
						động lực lớn nhất để chúng tôi phát triển.
					</p>

					<p class="stext-113 cl6 p-b-26">
						Đội ngũ của chúng tôi bao gồm những người yêu thời trang, sáng tạo và tận tâm, luôn sẵn sàng đổi
						mới để mang đến những trải nghiệm mua sắm tốt nhất. Chúng tôi không chỉ bán sản phẩm, mà còn lan
						tỏa phong cách sống hiện đại và bền vững. Sự ủng hộ của khách hàng là nguồn cảm hứng để chúng
						tôi tiếp tục cải tiến và mở rộng.
					</p>

					<p class="stext-113 cl6 p-b-26">
						Bạn có câu hỏi nào không? Hãy liên hệ với chúng tôi tại cửa hàng ở tầng 8, 379 Phố Hudson, New
						York, NY 10018 hoặc gọi cho chúng tôi qua số (+1) 96 716 6879.
					</p>
				</div>
			</div>

			<div class="col-11 col-md-5 col-lg-4 m-lr-auto">
				<div class="how-bor1">
					<div class="hov-img0">
						<img src="~/images/about-01.jpg" alt="IMG">
					</div>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="order-md-2 col-md-7 col-lg-8 p-b-30">
				<div class="p-t-7 p-l-85 p-l-15-lg p-l-0-md">
					<h3 class="mtext-111 cl2 p-b-16">
						Sứ mệnh của chúng tôi
					</h3>

					<p class="stext-113 cl6 p-b-26">
						Sứ mệnh của chúng tôi là mang đến cho khách hàng những sản phẩm thời trang không chỉ đẹp mà còn
						bền vững và thân thiện với môi trường. Chúng tôi cam kết tạo ra giá trị lâu dài, không chỉ cho
						khách hàng mà còn cho cộng đồng và hành tinh của chúng ta. Mỗi sản phẩm đều được thiết kế với sự
						chú trọng đến chi tiết, nhằm truyền cảm hứng cho một lối sống tự tin và phong cách.
					</p>

					<div class="bor16 p-l-29 p-b-9 m-t-22">
						<p class="stext-114 cl6 p-r-40 p-b-11">
							Sáng tạo chỉ là việc kết nối mọi thứ. Khi bạn hỏi những người sáng tạo về cách họ làm điều
							gì đó, họ cảm thấy hơi tội lỗi vì họ không thực sự làm ra nó, họ chỉ nhìn thấy điều gì đó.
							Mọi thứ trở nên rõ ràng với họ sau một thời gian.
						</p>

						<span class="stext-111 cl8">
							- Steve Jobs
						</span>
					</div>
				</div>
			</div>

			<div class="order-md-1 col-11 col-md-5 col-lg-4 m-lr-auto p-b-30">
				<div class="how-bor2">
					<div class="hov-img0">
						<img src="~/images/about-02.jpg" alt="IMG">
					</div>
				</div>
			</div>
		</div>
	</div>
</section>