@page
@model Shofy.Pages.Client.ThankYouModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Cảm ơn bạn!";
}

<div class="container py-5 text-center">
    <h2 class="mb-4">Cảm ơn bạn đã mua hàng!</h2>
    <p>Đơn hàng của bạn đã được đặt thành công. Chúng tôi sẽ xử lý trong thời gian sớm nhất.</p>
    <p>Bạn sẽ được chuyển hướng về trang sản phẩm trong <span id="countdown">5</span> giây...</p>
    <a href="/Client/Product" class="btn btn-primary">Quay lại ngay</a>
</div>

@section Scripts {
    <script>
        let timeLeft = 5;
        const countdownElement = document.getElementById("countdown");

        const countdown = setInterval(() => {
            timeLeft--;
            countdownElement.textContent = timeLeft;

            if (timeLeft <= 0) {
                clearInterval(countdown);
                window.location.href = "http://localhost:9999/Client/Product";
            }
        }, 1000);
    </script>
}