@page
@model Shofy.Pages.Accounts.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<style>

    .forgot-password-container {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        padding: 2.5rem;
        max-width: 500px;
        width: 100%;
    }

    .form-title {
        font-size: 1.75rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .form-title i {
        color: #dc3545;
    }

    .form-subtitle {
        color: #6c757d;
        margin-bottom: 2rem;
        font-size: 0.9rem;
    }

    .form-control {
        padding: 0.75rem 1rem;
        border-radius: 5px;
        border: 1px solid #dee2e6;
    }

    .form-control:focus {
        box-shadow: none;
        border-color: #0d6efd;
    }

    .input-group-text {
        background: none;
        border-left: none;
    }

    .form-label {
        font-weight: 500;
        color: #212529;
    }

    .btn-reset {
        padding: 0.75rem;
        font-weight: 500;
        width: 100%;
        margin-top: 1rem;
        background-color: #0f172a;
        border: none;
    }

    .btn-reset:hover {
        background-color: #1e293b;
    }

    .back-link {
        text-align: center;
        margin-top: 1.5rem;
        color: #dc3545;
        text-decoration: none;
        font-size: 0.9rem;
        display: block;
    }

    .back-link:hover {
        text-decoration: underline;
        color: #bb2d3b;
    }
</style>

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="forgot-password-container">
        <h1 class="form-title">
            <i class="bi bi-lock"></i>
            Forgot Password
        </h1>
        <p class="form-subtitle">
            Lost your password? Please enter your email address.
            You will receive a link to create a new password via email.
        </p>

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success mt-2 text-center">@Model.SuccessMessage</div>
        }
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger mt-2 text-center">@Model.ErrorMessage</div>
        }

        <form method="post" asp-page-handler="RequestReset">
            @Html.AntiForgeryToken()

            <!-- Email Input -->
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email <i class="bi bi-envelope"></i></label>
                <div class="form-group">
                    <input type="email" class="form-control border-start-0" asp-for="Email" placeholder="Email address" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <!-- Reset Button -->
            <button type="submit" class="btn btn-primary btn-reset">Send Password Reset Link</button>

            <!-- Back to Login -->
            <a href="/Accounts/Login" class="back-link">Back to login page</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}