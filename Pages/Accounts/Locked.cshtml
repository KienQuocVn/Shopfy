@page
@model Shofy.Pages.Accounts.LockedModel
@{
    ViewData["Title"] = "Tài khoản bị khóa";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card border-danger shadow-sm" style="max-width: 500px; width: 100%;">
        <div class="card-header bg-danger text-white text-center">
            <h4 class="mb-0 fs-4"><i class="bi bi-lock-fill"></i> Tài khoản bị khóa</h4>
        </div>
        <div class="card-body text-center">
            <p class="fs-5 mb-3">
                <strong class="text-primary">@Model.Username</strong>, tài khoản của bạn đã bị 
                <span class="text-danger fw-bold">vô hiệu hóa</span>.
            </p>
            <p class="fs-6 mb-4">
                Lý do: <span class="text-warning fw-semibold">@Model.Reason</span>
            </p>
            <a asp-page="/Accounts/Login" class="btn btn-outline-primary">
                <i class="bi bi-arrow-left-circle"></i> Quay lại đăng nhập
            </a>
        </div>
    </div>
</div>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
